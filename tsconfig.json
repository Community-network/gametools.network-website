{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "es2015", "es2016", "es2017", "dom" ],
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "plugins": [ { "name": "typescript-plugin-css-modules" } ]
  },

  "include": [
    "./src/**/*"
  ]
}